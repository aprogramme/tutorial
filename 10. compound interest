
#include <stdio.h>
#include <math.h>

int main()
{
    float principle, time, rate, CI;
    printf("Enter principle amount\n");
    scanf("%f", &principle);
    
    printf("Enter time\n");
    scanf("%f", &time);
    
    printf("Enter rate\n");
    scanf("%f", &rate);
    
    CI = principle* (pow(( 1 + rate / 100), time));
    
    printf("Simple Interest is %f:\n", CI);
}
